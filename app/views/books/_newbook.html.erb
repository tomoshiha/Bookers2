
<h2>New book</h2>
<% if book.errors.any? %>
  <%= book.errors.count %>errors
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


  <%= form_with model: Book.new do |f| %>
  <div class="form-group">
    <label>Title</label><br>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label>Opinion</label><br>
      <%= f.text_area :body %>
  </div>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>