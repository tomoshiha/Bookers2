<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'newbook', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>

      <tr>
        <td><%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %></td>
            <% end %>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      <% end %>
      </tr>
    </table>
    </div>
  </div>
</div>










